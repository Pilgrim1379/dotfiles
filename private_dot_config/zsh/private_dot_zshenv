# ~/.zshenv
# This file is sourced for EVERY zsh invocation (interactive or not).
# Keep it minimal to avoid slowing down non-interactive shells.

case $VENDOR in
  ( apple )
    export SHELL_SESSIONS_DISABLE=1
  ;;
  ( ubuntu )
    export skip_global_compinit=1
  ;;
esac

[[ $OSTYPE == linux-gnu ]] && export DEBIAN_PREVENT_KEYBOARD_CHANGES=1

# XDG Base Directories
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"
export XDG_CACHE_HOME="$HOME/.cache"

# Tell zsh where to look for our dotfiles.
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"

# Locale tweak for Linux sorting
[[ $OSTYPE == linux-gnu ]] && export LC_COLLATE="C.UTF-8"