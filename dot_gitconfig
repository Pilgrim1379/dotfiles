# use separate file for username / github token / etc
[include]
  path = ~/bootstrap/scripts/git/gitconfig_local
[core]
	autocrlf = false
	excludesfile = ~/.gitignore_global
	editor = nvim
[color]
	ui = always
[push]
	default = upstream
[pull]
	rebase = true
[branch]
	autosetuprebase = always
[diff]
	tool = opendiff
	noprefix = true
	colorMoved = zebra
[difftool "opendiff"]
	cmd = /usr/bin/opendiff \"$LOCAL\" \"$REMOTE\" -merge \"$MERGED\" 2>/dev/null | cat
# https://opensource.com/article/20/11/git-aliases
[alias]
	opendiff = difftool --no-prompt --tool opendiff --dir-diff
	p = push
	st = status -sb
	ll = log --oneline
	last = log -1 HEAD
	ci = commit -m
	rv = remote -v
	d = diff
	gl = config --global -l
	se = !git rev-list --all | xargs git grep -F
	br = branch
	co = checkout
	fit = !git reset --hard && git clean -fdx
	uncommit = reset --soft HEAD^
	ac = !git add -A && git commit\n
	alias = config --get-regexp ^alias\\.
[merge]
	tool = opendiff
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential]
	helper = osxkeychain
	helper = 
	helper = /usr/local/share/gcm-core/git-credential-manager
[user]
	name = Napoleon Ahiable
	email = 219075+thepreacher@users.noreply.github.com
[init]
	defaultBranch = main
[maintenance]
		
