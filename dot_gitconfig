# use separate file for username / github token / etc
[include]
	path = ~/bootstrap/scripts/git/gitconfig_local

[core]
	autocrlf = false
	excludesfile = ~/.gitignore_global
	editor = code --wait

[pager]
	# branch = false
	diff = delta
	log = delta
	reflog = delta
	show = delta

[color]
	ui = always

[push]
	default = upstream

[pull]
	rebase = true

[rebase]
	autosquash = true
	abbreviateCommands = true

[branch]
	autosetuprebase = always

[diff]
	tool = vscode
	noprefix = true
	colorMoved = default

[difftool "vscode"]
  	cmd = code --wait --diff $LOCAL $REMOTE

[merge]
    conflictstyle = diff3
	tool = vscode

[mergetool "vscode"]
  	cmd = code --wait $MERGED

[interactive]
    diffFilter = delta --color-only

